prototype(Carbon.Image:Lightbox) < prototype(Neos.Fusion:Component) {
    @if {
        isLive = ${node.context.live}
        hasAsset = ${this.asset}
    }

    asset = false
    config = ${Configuration.setting('Carbon.Image.lightbox')}
    class = null
    caption = null

    renderer = Neos.Fusion:Tag {
        tagName = 'a'
        content = ${value}
        attributes = afx`
            <Carbon.Image:Attributes.Lightbox {...props} />
        `
    }
}
