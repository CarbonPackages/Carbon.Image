prototype(Carbon.Image:Spacer) < prototype(Neos.Fusion:Tag) {
    width = null
    height = null
    ratio = ${this.width && this.height ? this.width / this.height : null}
    paddingTop = ${this.ratio ? (100 / this.ratio) + '%' : null}

    @if.hasPaddingTop = ${this.paddingTop}
    @context.paddingTop = ${this.paddingTop}

    tagName = 'i'
    attributes {
        class = 'carbon-image-spacer'
        style = ${'width:100%;display:block;height:0;padding-top:' + paddingTop}
    }
}
