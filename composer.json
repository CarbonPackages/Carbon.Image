{
    "name": "carbon/image",
    "type": "neos-carbon",
    "description": "Image helper for Neos CMS",
    "license": "MIT",
    "keywords": ["flow", "neos", "fusion", "helper", "image", "carbon"],
    "require": {
        "neos/neos": "~3.0 || ~4.0",
        "carbon/link": "^1.0"
    },
    "authors": [
        {
            "name": "Jon Uhlmann",
            "email": "me@jonnitto.ch",
            "homepage": "https://jonnitto.ch",
            "role": "Developer"
        }
    ],
    "archive": {
        "exclude": [
            ".editorconfig",
            ".gitattributes",
            ".github",
            ".gitignore",
            "CODE_OF_CONDUCT.md"
        ]
    },
    "autoload": {
        "psr-4": {
            "Carbon\\Image\\": "Classes"
        }
    },
    "extra": {
        "marketplace-account": "me@jonnitto.ch",
        "installer-name": "Carbon.Image",
        "neos": {
            "package-key": "Carbon.Image"
        }
